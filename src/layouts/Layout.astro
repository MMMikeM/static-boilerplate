---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { Button } from '~/components/ui/button';
import '../global.css'
import { Container } from '~/components/primitives/jsx';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="flex h-10 justify-center items-center px-4">
			<h1 class="mr-auto font-semibold">{title}</h1>
			<nav class="flex gap-4">
				<Button variant="link" asChild>
					<a href="/">Home</a>
				</Button>
				<Button variant="link" asChild>
					<a href="/contact">React Form</a>
				</Button>
				<Button variant="link" asChild>
					<a href="/contact-static">Static Form</a>
				</Button>
			</nav>
		</header>
		<Container mx={"auto"} mt={"4"} maxW={{ base: "lg" }}>
			<slot />
		</Container>
	</body>
</html>
